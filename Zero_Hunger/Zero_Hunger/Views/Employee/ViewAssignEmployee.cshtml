@Model List<EmpAssignmentDTO>
@{
    ViewBag.Title = "ViewAssignEmployee";
}

<div class="container">
    <h2>View Assigned Employee</h2>

    @if (Model.Count == 0)
    {
        <p>No employees found.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Assignment ID</th>
                    <th>Employee ID</th>
                    <th>Restuarant ID</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var empAss in Model)
                {
                    <tr>
                        <td>@empAss.AssID</td>
                        <td>@empAss.EmpID</td>
                        <td>@empAss.RestID</td>
                        <td><a href="/Employee/DeleteAssignEmployee/@empAss.AssID" class="btn btn-success">Delete Employee Assignemnt</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <input type="button" class="btn btn-primary btn-md" value="Back" onclick="location.href='/Employee/Index'" />
</div>

